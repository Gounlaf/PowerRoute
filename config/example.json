{
    "start": "route-name-1",
    "routes": {
        "route-name-1": {
            "condition": {
                "evaluator" : { "name" : "queryStringParams", "argument" : "locale" },
                "matchers" : [{ "name": "exists",  "argument" : null }],
            },
            "actions" : {
                "match" : [{ "action" : "saveCookie", "argument" : { "name" : "cookieTest", "value" : "{{get.locale}}", "ttl" : 50 } }],
                "doesNotMatch" : [{ "action" : "executeRoute", "argument" : { "id" : "route-name-2"} }]
            }
        },
        "route-name-2": {
            "condition": {
                "evaluator" : { "name" : "headers", "argument" : "Content-Type" },
                "matchers" : [{ "name": "equalsTo",  "argument" : "application/json" }],
            },
            "actions" : {
                "match" : [{ "action" : "displayPage", "argument" : "/var/www/files/test.html" }],
                "doesNotMatch" : [{ "action" : "404Error", "arguments" : { "file" : "/var/www/files/404.html"} }]
            }
        }
    }
}